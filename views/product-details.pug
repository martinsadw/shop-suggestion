extends layout

block content
    div(class='product-detail')
        img(class='product-picture', src='https://via.placeholder.com/490x420')
        div(class='product-info')
            h2(class='product-name')= productDetail.name
            p(class='product-Â´description')= productDetail.description
            div(class='product-tags')
                each tag in productDetail.tags
                    span(class='tag')= tag
            div(class='product-buy-info')
                button(class='product-buy', disabled) Comprar
                span(class='product-price')= 'R$ ' + productDetail.value.toFixed(2)
                span(class='out-stock') (Sem estoque)


    div(class='recommended' + (suggested.length > 0 ? '' : ' hide'))
        h2 Recomendados:
        div(class='product-list')
            each product in suggested
                a(href='/produtos/' + product.id)
                    div(class='product')
                        img(class='product-picture', src='https://via.placeholder.com/280x240')
                        div(class='product-tags')
                            each tag in product.tags
                                span(class='tag')= tag
                        div(class='product-info')
                            h2(class='product-name')= product.name
                            span(class='product-price')= 'R$ ' + product.value.toFixed(2)
